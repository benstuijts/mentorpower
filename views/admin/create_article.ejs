<div class="container-fluid">
    <a href="<%= baseUrl %>/admin/imagelist" class="btn btn-default" target="_blank"><i class="fa fa-picture-o"></i> Open Image List</a>
    
    <h2>Create Article</h2>
    
    <form method="post" action="<%=baseUrl %>/admin/dashboard">
        <% create_form_field('title', 'Title') %>
        <% create_form_field('subtitle', 'Subtitle') %>
        <% create_form_field('slug', 'Slug') %>
        <% create_form_field('tags', 'Tags') %>
        <% create_form_field('author', 'Author') %>
        <% create_form_field('image', 'Main Image') %>
        <hr>
        <div class="form-group">
            <label for="comment">Body</label>
            <textarea class="form-control" rows="20" name="body" id="body"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Save article</button>
        </div>
        <input type="hidden" name="token" value="<%= token %>">
        <input type="hidden" name="action" value="<%= action %>">
    </form>
</div>

<% function create_form_field(name, caption) { %>
    <div class="form-group">
        <label for="<%=name%>"><%=caption%></label>
        <input type="text" name="<%=name%>" id="<%=name%>" class="form-control">
    </div>
<% } %>