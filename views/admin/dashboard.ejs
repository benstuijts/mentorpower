<% include ../partials/header %>

<body>
    <div class="container-fluid">
        
        <h1>
            <i class="fa fa-cogs"></i> Administration Dashboard
            <a href="<%= baseUrl %>/admin/logout" class="btn btn-warning pull-right">Logout</a>
        </h1>
        
        <div class="row">
            <a href="?action=ALL_ARTICLES" class="btn btn-default"><i class="fa fa-home"></i> All articles</a>
            <a href="?action=CREATE_ARTICLE" class="btn btn-success"><i class="fa fa-file-text-o"></i> Create new article</a>
            <a href="" class="btn btn-default"><i class="fa fa-picture-o"></i> Upload image</a>
        </div>
        
        <% if(message) { %>
            <div class="row">
                <div class="col-xs-12  alert alert-<%= message.type %>">
                    <i class="fa fa-<%= message.icon %>"></i> <%= message.body %>
                </div>
            </div>
        <% } %>
        
        <% if(action == 'CREATE_ARTICLE') { %>
            <% include create_article %>
        <% } %>
        
        
    </div>
</body>
</html>