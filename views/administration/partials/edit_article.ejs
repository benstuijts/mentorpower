<div class="container-fluid">
    <h2>Edit Article!!!</h2>
    
    <div class="row">
        <form method="post" action="<%=baseUrl %>admin/dashboard">
            <div class="col-sm-12 col-md-6 col-lg-4">
                <% create_form_field('title', 'Title', title) %>
                <% create_form_field('subtitle', 'Subtitle', subtitle) %>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4">
                <% create_form_field('slug', 'Slug', slug) %>
                <% create_form_field('tags', 'Tags', tags) %>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4">
                <% create_form_field('author', 'Author', author) %>
                <% create_form_field('image', 'Main Image', image) %>
                <% create_form_field('backgroundColor', 'BackgroundColor', backgroundColor) %>
                
            </div>
            <div class="form-group">
                <label for="comment">Body</label>
                <textarea class="form-control" rows="20" name="body" id="body"><%= body %></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o"></i> Save article</button>
            </div>
            <input type="hidden" name="token" value="<%= token %>">
            <input type="hidden" name="id" value="<%= _id %>">
            <input type="hidden" name="action" value="<%= action %>">

        </form>
        
    </div>
    
    <h2>Preview</h2>
    <hr>
    <h2><%= title %></h2>
    <h3><%= subtitle %></h3>
    <div>
        <%- body %>
    </div>
    
</div>

<% function create_form_field(name, caption, value) { %>
    <div class="form-group">
        <label for="<%=name%>"><%=caption%></label>
        <input type="text" name="<%=name%>" id="<%=name%>" value="<%-value%>" class="form-control">
    </div>
<% } %>